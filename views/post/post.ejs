<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="<%= assetFingerprint('/stylesheets/styles.css') %>">
</head>
<body>
    <header class="header">
        <div class="container">
            <a href="/" class="logo"></a>
            <ul class="menu">
                <li><a href="/users/<%= user.login %>">Home</a></li>
            </ul>
        </div>
    </header>
    
    <div class="main">
        <div class="container">
            <div class="content">
                <div class="post">
                    <div class="top">
                        <h2><%= post.title %></h2>
                    </div>
                    <div class="body">
                        <p><%= post.body %></p>
                    </div>
                    <div class="bottom">
                         <div class="author">
                            Author: <a href="/">Lorem</a>
                        </div>
                    </div>
                </div>

                <div class="comments" id="<%= post.id %>">
                    <h3>Comments</h3>
                    <div class="comment-list">
                        
                        <% if (comments.length) { %>
                            <ul>
                                <% } %>
                        
                                    <% comments.forEach(function(item){ %>
                                        <li id= "<%= item.id %>">
                                            <div class="head">
                                                <a href="/users/<%=item.owner.login %>">
                                                    <%= item.owner.login %>
                                                </a>
                                            </div>
                        
                                            <%= item.body %>
                                                <span class="link" id="reply">Reply</span>
                        
                                                
                                        </li>
                                        <% }) %>
                                            <% if(comments.length) { %>
                            </ul>
                            <% } %>

                        <span class="link" id="new">Leave a comment</span>
                        <form class="comment">
                            <textarea name="body"></textarea>
                            <div class="buttons">
                                <button class="cancel secondary">Cancel</button>
                                <button class="send">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
            <div class="sidebar">
                <div class="box auth">
                    <% if(!user.id && !user.login) { %>

                        <form method="post" class="login">
                            <h2>Log in</h2>
                            <div class="form-group">
                                <label for="login-login">Login</label>
                                <input type="text" id="login-login" name="login" />
                            </div>
                            <div class="form-group">
                                <label for="login-password">Password</label>
                                <input type="password" id="login-password" name="password" />
                            </div>
                            <div class="buttons">
                                <button class="switch-button secondary-inverse">Registration</button>
                                <button class="login-button">Log in</button>
                            </div>
                        </form>

                        <form method="post" class="register">
                            <h2>Registration</h2>
                            <div class="form-group">
                                <label for="register-login">Login</label>
                                <input type="text" id="register-login" name="login" />
                            </div>
                            <div class="form-group">
                                <label for="register-name">Name</label>
                                <input type="text" id="register-name" name="name" />
                            </div>
                            <div class="form-group">
                                <label for="register-surname">Surname</label>
                                <input type="text" id="register-surname" name="surname" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="register-password" name="password" />
                            </div>
                            <div class="form-group">
                                <label for="register-password-confirm">Confirm the password</label>
                                <input type="password" id="register-password-confirm" name="passwordConfirm" />
                            </div>
                            <div class="buttons">
                                <button class="switch-button secondary-inverse">Log in</button>
                                <button class="register-button">Registration</button>
                            </div>
                        </form>
                    <% } else { %>
                        <ul>
                            <li>Hey, <a href="/users/<%= user.login %>"><%= user.login %> !</a></li>
                            <li><a href="/post/add">Add post</a></li>
                            <li><a href="/api/auth/logout">Log off</a></li>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
      <div class="container">
      </div>
    </footer>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="<%= assetFingerprint('/javascripts/scripts.js') %>"></script>
</body>
</html>